@model Web.ViewModels.ProductosViewModel

<div class="modal fade" id="productoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centerd modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Alta y/o modificacion de Productos.</h5>
            </div>
            @using (Html.BeginForm("GuardarProducto","Productos",FormMethod.Post, new {enctype="multipart/form-data"}))
            {
                <div Class="modal-body">

                        @Html.HiddenFor(x=> x.Id)
                        @Html.HiddenFor(x=> x.Imagen)

                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-3 form-control-label">Imagen</label>
                                @Html.EditorFor(x=> x.Imagen_archivo, new{AddHtmlAttributeValue= new {@class = "col-md8 form-control"}})
                            </div>
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-3 form-control-label">Descripcion</label>
                                @Html.EditorFor(x=> x.Descripcion, new{AddHtmlAttributeValue= new {@class = "col-md8 form-control"}})
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-3 form-control-label">Precio</label>
                            @Html.EditorFor(x=> x.Precio, new{AddHtmlAttributeValue= new {@class = "col-md8 form-control"}})
                            </div>
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-3 form-control-label">Stock</label>
                                @Html.EditorFor(x=> x.Stock, new{AddHtmlAttributeValue= new {@class = "col-md8 form-control"}})
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mt-1 mb-3">
                                <label class="col-md-2 form-control-label">Activo</label>
                            @Html.EditorFor(x=> x.Activo, new{AddHtmlAttributeValue= new {@class = "col-md8 form-control"}})
                            </div>
                        </div>
                </div>
                
                <div Class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success" id="btnGuardar">Guardar</button>
                </div>
            }
        </div>
    </div>
</div>